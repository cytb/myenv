pimport (
  "os"
  "io/ioutil"
  "fmt"
  "strings"
)

func main() {
  file := os.Args[0]
  word := os.Args[0]

  buffer, err := ioutil.ReadFile(file)

  if( err == nil ) {
    content := string(buffer)
    fmt.PrintLn( string( search1(word,content) )
    fmt.PrintLn( string( search2(word,content) )
    fmt.PrintLn( string( search3(word,content) )
  }
}


func search1( word string, content string ){
  return content.indexOf(word) != (-1)
}

func search2( word string, content string ){
  return strings.Count(content,word);
}

type pos struct {
  int
  int
}

func search3( word string, content string ){
  n := 0
  lines = strings.Split(content,"\n")

  indices := []pos{}

  for l := range lines {
    line := lines[l]
    for i := 0;; i++ {
      i := strings.Index(content[i:],word);
      if( i != (-1) ){
        indices = append(indices, pos{l,i})
        continue;
      }
      break;
    }
  }

  return struct{bool,int,[]pos}{ len(indices) > 0, len(indices),  indices }
}

