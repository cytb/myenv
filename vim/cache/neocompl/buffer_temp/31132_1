name:                hs-othello
version:             0.0.0.1
-- synopsis:
-- description:
homepage:            https://github.com/hikky-n/hs-othello#readme
license:             MIT
license-file:        LICENSE
author:              hikky-n
maintainer:          hikky-n@excite-jp
copyright:           (c) 2017 hikky-n
category:            Game
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

Flag FastCompile
   Description: Turn off optimizations for faster compilation
   Manual: True
   Default: False


executable hothello
  hs-source-dirs:      .
  main-is:             Othello/Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
                       -j +RTS -A128m -n2m -RTS -O0
                       --disable-optimization 
                       --disable-library-vanilla
                       --enable-executable-dynamic
  build-depends:       base
                     , mersenne-random-pure64
                     , time
                     , transformers
                     , containers
                     , text
                     , array
                     , gloss
                     , GLFW
                     , fltkhs
                     , OpenGL
                     , OpenGLRaw
                     , FTGL
                     , JuicyPixels-repa
                     , repa
  other-modules:       Othello.Solvers
                     , Othello.Core
                     , Othello.Game
                     , Othello.Renderer.Gloss
                     , Othello.Renderer.GLFW
                     , Othello.Renderer.FLTK
                     , Othello.Renderer.Common
  default-language:    Haskell2010

  ghc-Options: -debug -dcore-lint
  if impl(ghc >= 7.10) && flag(FastCompile)
     ghc-Options: -fno-specialise -fmax-simplifier-iterations=0 -fsimplifier-phases=0
  else
     ghc-Options: -O2 
  if os(windows)
   ghc-Options: -pgml g++ "-optl-Wl,--whole-archive" "-optl-Wl,-Bstatic" "-optl-Wl,-lfltkc" "-optl-Wl,-Bdynamic" "-optl-Wl,--no-whole-archive"
  if os(darwin)
   ghc-Options: "-optl-Wl,-lfltkc"
  if !os(darwin) && !os(windows)
   ghc-Options: -pgml g++ "-optl-Wl,--whole-archive" "-optl-Wl,-Bstatic" "-optl-Wl,-lfltkc" "-optl-Wl,-Bdynamic" "-optl-Wl,--no-whole-archive"

